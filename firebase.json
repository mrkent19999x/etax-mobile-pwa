{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(png|jpg|jpeg|gif|webp)",
        "headers": [{
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }]
      }
    ],
    "rewrites": [
      {
        "source": "!/assets/**",
        "destination": "/login.html"
      }
    ]
  }
}